<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.audioweb.work.mapper.WorkTerminalMapper">
    
    <resultMap type="WorkTerminal" id="WorkTerminalResult">
        <result property="terRealId"    column="ter_real_id"    />
        <result property="terminalId"    column="terminal_id"    />
        <result property="terminalName"    column="terminal_name"    />
        <result property="terminalIp"    column="terminal_ip"    />
        <result property="isCmic"    column="is_cmic"    />
        <result property="isAutoCast"    column="is_auto_cast"    />
        <result property="domainId"    column="domain_id"    />
        <result property="status"    column="status"    />
        <result property="loginTime"    column="login_time"    />
        <result property="precinct"    column="precinct"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="remark"    column="remark"    />
        <association property="domain"    column="domain_id" javaType="Sysdomain" resultMap="domainResult" />
    </resultMap>

	<resultMap id="domainResult" type="SysDomain">
		<id     property="domainId"   column="domain_id"     />
		<result property="parentId" column="parent_id"   />
		<result property="domainName" column="domain_name"   />
		<result property="ancestors" column="ancestors"   />
		<result property="leader"   column="leader"      />
		<result property="phone"   column="phone" />
	</resultMap>
    <sql id="selectWorkTerminalVo">
        select d.ancestors,d.domain_name,d.domain_id,d.leader,d.phone,d.parent_id,
        	   t.ter_real_id,t.terminal_id, t.terminal_name, t.terminal_ip, t.is_cmic, t.is_auto_cast, t.status, t.login_time, t.precinct, t.del_flag, t.create_by, t.create_time, t.remark 
		from work_terminal t left join sys_domain d 
		on t.domain_id = d.domain_id and d.status = 0 and d.del_flag = 0
    </sql>

    <select id="selectWorkTerminalList" parameterType="WorkTerminal" resultMap="WorkTerminalResult">
        <include refid="selectWorkTerminalVo"/>
        <where>  
        	t.del_flag = '0'
            <if test="terminalName != null  and terminalName != ''"> and terminal_name like concat('%', #{terminalName}, '%')</if>
            <if test="terminalId != null  and terminalId != ''"> and terminal_id = #{terminalId}</if>
            <if test="domainId != null  and domainId != ''"> AND (d.domain_id = #{domainId} OR d.domain_id IN ( SELECT q.domain_id FROM sys_domain q WHERE FIND_IN_SET (#{domainId},ancestors) ))</if>
            <if test="terminalIp != null  and terminalIp != ''"> and t.terminal_ip = #{terminalIp}</if>
            <if test="isCmic != null  and isCmic != ''"> and t.is_cmic = #{isCmic}</if>
            <if test="isAutoCast != null  and isAutoCast != ''"> and t.is_auto_cast = #{isAutoCast}</if>
            <if test="status != null  and status != ''"> and t.status = #{status}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
				AND date_format(t.login_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
				AND date_format(t.login_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
        </where>
		<!-- 数据范围过滤 -->
		${params.dataScope}
    </select>
    
    <select id="selectWorkTerminalById" parameterType="String" resultMap="WorkTerminalResult">
        <include refid="selectWorkTerminalVo"/>
        where ter_real_id = #{terRealId}
    </select>
        
    <insert id="insertWorkTerminal" parameterType="WorkTerminal">
        insert into work_terminal
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="terminalId != null  and terminalId != ''">terminal_id,</if>
            <if test="terminalName != null  and terminalName != ''">terminal_name,</if>
            <if test="terminalIp != null  and terminalIp != ''">terminal_ip,</if>
            <if test="isCmic != null  and isCmic != ''">is_cmic,</if>
            <if test="isAutoCast != null  and isAutoCast != ''">is_auto_cast,</if>
            <if test="domainId != null ">domain_id,</if>
            <if test="status != null  and status != ''">status,</if>
            <if test="loginTime != null ">login_time,</if>
            <if test="precinct != null  and precinct != ''">precinct,</if>
            <if test="delFlag != null  and delFlag != ''">del_flag,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="remark != null  and remark != ''">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="terminalId != null  and terminalId != ''">#{terminalId},</if>
            <if test="terminalName != null  and terminalName != ''">#{terminalName},</if>
            <if test="terminalIp != null  and terminalIp != ''">#{terminalIp},</if>
            <if test="isCmic != null  and isCmic != ''">#{isCmic},</if>
            <if test="isAutoCast != null  and isAutoCast != ''">#{isAutoCast},</if>
            <if test="domainId != null ">#{domainId},</if>
            <if test="status != null  and status != ''">#{status},</if>
            <if test="loginTime != null ">#{loginTime},</if>
            <if test="precinct != null  and precinct != ''">#{precinct},</if>
            <if test="delFlag != null  and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="remark != null  and remark != ''">#{remark},</if>
         </trim>
    </insert>

    <update id="updateWorkTerminal" parameterType="WorkTerminal">
        update work_terminal
        <trim prefix="SET" suffixOverrides=",">
            <if test="terminalId != null  and terminalId != ''">terminal_id = #{terminalId},</if>
            <if test="terminalName != null  and terminalName != ''">terminal_name = #{terminalName},</if>
            <if test="terminalIp != null  and terminalIp != ''">terminal_ip = #{terminalIp},</if>
            <if test="isCmic != null  and isCmic != ''">is_cmic = #{isCmic},</if>
            <if test="isAutoCast != null  and isAutoCast != ''">is_auto_cast = #{isAutoCast},</if>
            <if test="domainId != null ">domain_id = #{domainId},</if>
            <if test="status != null  and status != ''">status = #{status},</if>
            <if test="loginTime != null ">login_time = #{loginTime},</if>
            <if test="precinct != null  and precinct != ''">precinct = #{precinct},</if>
            <if test="delFlag != null  and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="remark != null  and remark != ''">remark = #{remark},</if>
        </trim>
        where ter_real_id = #{terRealId}
    </update>

    <delete id="deleteWorkTerminalById" parameterType="String">
    	update work_terminal set del_flag = '2' where ter_real_id = #{terRealId}
    </delete>

    <delete id="deleteWorkTerminalByIds" parameterType="String">
        update work_terminal set del_flag = '2' where ter_real_id in 
        <foreach item="terRealId" collection="array" open="(" separator="," close=")">
            #{terRealId}
        </foreach>
    </delete>
    
</mapper>