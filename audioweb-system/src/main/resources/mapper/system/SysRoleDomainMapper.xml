<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.audioweb.system.mapper.SysRoleDomainMapper">

	<resultMap type="SysRoleDomain" id="SysRoleDomainResult">
		<result property="roleId"     column="role_id"      />
		<result property="domainId"     column="domain_id"      />
	</resultMap>

	<delete id="deleteRoleDomainByRoleId" parameterType="Long">
		delete from sys_role_domain where role_id=#{roleId}
	</delete>
	
	<select id="selectCountRoleDomainByDomainId" resultType="Integer">
	    select count(1) from sys_role_domain where domain_id=#{domainId}
	</select>
	
	<delete id="deleteRoleDomain" parameterType="Long">
 		delete from sys_role_domain where role_id in
 		<foreach collection="array" item="roleId" open="(" separator="," close=")">
 			#{roleId}
        </foreach> 
 	</delete>
	
	<insert id="batchRoleDomain">
		insert into sys_role_domain(role_id, domain_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.roleId},#{item.domainId})
		</foreach>
	</insert>
	
</mapper> 